<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewData["Title"] - Citel Software Teste</title>
    
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/fonts/fontawesome/css/all.min.css" type="text/css" rel="stylesheet">
    <link href="~/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="~/css/responsive.css" rel="stylesheet" />

</head>
<body>
    <header class="section-header">
        <section class="header-main border-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-4">
                        <a asp-action="Index" asp-controller="Produto" class="brand-wrap">
                            <img alt="Citel Software Teste" class="logo" src="https://www.citelsoftware.com.br/wp-content/uploads/2017/11/logo3_melhoropcao.png">
                        </a>
                    </div>

                    <div class="col-lg-9 col-sm-7 col-8 order-2 order-lg-3">
                        <div class="d-flex justify-content-end">
                            <div>
                                <partial name="_LoginPartial" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </header>
    <div style="min-height: 625px;">
        @RenderBody()
    </div>
    <footer class="section-footer border-top">
        <div class="container">
            <section class="footer-copyright border-top">
                <p class="float-left text-muted">Citel Software Teste</p>
                <p class="float-right text-muted">
                    Site desenvolvido para o teste de conhecimento da <a href="https://www.citelsoftware.com.br/" target="_blank">Citel</a>
                </p>
            </section>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery.maskMoney.min.js" type="text/javascript"></script>
    <script src="~/js/script.js" type="text/javascript"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
