@using CST.WebApp.MVC.Extensions
@model CST.WebApp.MVC.Models.ProdutoViewModel
@{
    ViewData["Title"] = Model.Nome;
}

<section class="section-content padding-y bg container">
    <div class="row hidden-xs">
        <div class="col-md-12 col-xs-12">
            <ul class="site-breadcrumbs">
                <li class="no-padding">
                    <a class="cursor-pointer"
                       asp-controller="Produto" asp-action="Index">
                        <i class="fa fa-university" aria-hidden="true"></i>
                        &nbsp; PÁGINA INICIAL (HOME)
                    </a>
                </li>                
                <li class="text-bold">
                    @Model.Nome.ToUpper()
                </li>
            </ul>
        </div>
    </div>
    <br />
    <div class="card">
        <div class="row no-gutters">
            <aside class="col-md-6">
                <article class="gallery-wrap">
                    <div class="img-big-wrap" style="text-align: center">
                        <img src="@Model.Imagem" alt="@Model.Nome">
                    </div>
                </article>
            </aside>
            <main class="col-md-6 border-left">
                <article class="content-body">
                    <h2 class="title">@Model.Nome</h2>
                    <div class="rating-wrap my-3">
                        <ul class="rating-stars">
                            <li style="width: 80%" class="stars-active">
                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </li>
                            <li>
                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </li>
                        </ul>
                        <small class="label-rating text-muted">132 avaliações</small>
                        <small class="label-rating text-success"> <i class="fa fa-clipboard-check"></i> 154 peças vendidas</small>
                    </div>

                    <div class="mb-3">
                        <var class="price h4">@this.FormatoMoeda(Model.Valor)</var>
                    </div>

                    <h5>@Model.Descricao</h5><br />
                    <p> @this.MensagemEstoque(Model.QuantidadeEstoque)</p>

                    <hr>

                    <a class="btn btn-info button-border-radius margin-right-15"
                       asp-controller="Produto" asp-action="Atualizar" asp-route-id="@Model.Id">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                        Editar
                    </a>
                    <a class="btn btn-danger button-border-radius margin-right-15"
                       asp-controller="Produto" asp-action="Deletar" asp-route-id="@Model.Id">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                        Deletar
                    </a>
                    <a class="btn btn-light button-border-radius"
                       asp-controller="Produto" asp-action="Index">
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>
                        Voltar
                    </a>
                </article>
            </main>
        </div>
    </div>
</section>